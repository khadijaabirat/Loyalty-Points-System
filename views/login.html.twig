{% extends 'layouts/base.twig' %}

{% block content %}
<h2>Login</h2>
<form method="post" action="/login">
    <label>Email:</label>
    <input type="email" name="email" required>
    <br>
    <label>Password:</label>
    <input type="password" name="password" required>
    <br>
    <button type="submit">Se connecter</button>
</form>
{% endblock %}
