{% extends 'layouts/base.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<div class="auth-wrapper">
    <div class="auth-card">
        <h1 class="auth-title">Connexion</h1>
        <p class="auth-subtitle">Accédez à votre espace client</p>

        {% if error %}
            <div class="auth-alert auth-alert-error">
                {{ error }}
            </div>
        {% endif %}

        <form method="POST" action="/Loyalty_Points_System/public/login" class="auth-form">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required>
            </div>

            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" name="password" required>
            </div>

            <div class="auth-actions">
                <button class="btn btn-primary btn-full">Se connecter</button>
            </div>
        </form>

        <div class="auth-footer">
            Pas encore de compte ?
            <a href="/Loyalty_Points_System/public/register">Créer un compte</a>
        </div>
    </div>
</div>
{% endblock %}
