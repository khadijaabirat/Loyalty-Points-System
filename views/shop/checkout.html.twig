{% extends './layouts/base.twig' %}

{% block title %}ShopEasy - Paiement{% endblock %}

{% block content %}
    <h1>Finaliser votre commande</h1>

    {% if checkout_error %}
        <div class="alert alert-error">
            {{ checkout_error }}
        </div>
    {% endif %}

    <div class="checkout-layout">
        <div class="checkout-form-container">
            <h2>Informations de paiement</h2>
            <p class="form-note">Simulation de paiement (données non enregistrées)</p>
            
            <form action="/Loyalty_Points_System/public/shop/process-checkout" method="POST" class="checkout-form" id="checkoutForm">
                <div class="form-group">
                    <label for="card_name">Nom sur la carte</label>
                    <input type="text" id="card_name" name="card_name" placeholder="NOM PRENOM" required>
                </div>
                
                <div class="form-group">
                    <label for="card_number">Numéro de carte</label>
                    <input type="text" id="card_number" name="card_number" placeholder="1234 5678 9012 3456" maxlength="19" required>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="card_expiry">Date d'expiration</label>
                        <input type="text" id="card_expiry" name="card_expiry" placeholder="MM/AA" maxlength="5" required>
                    </div>
                    <div class="form-group">
                        <label for="card_cvv">CVV</label>
                        <input type="text" id="card_cvv" name="card_cvv" placeholder="123" maxlength="4" required>
                    </div>
                </div>

                 <div class="loyalty-usage-section" style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 20px; border: 1px dashed #007bff;">
                    <h4 style="margin-top: 0; color: #007bff;"> Utiliser vos points ?</h4>
                    
                    {% if user.total_points > 0 %}
                        <div class="form-group-checkbox" style="display: flex; align-items: center; gap: 10px;">
                            <input type="checkbox" id="use_points" name="use_points" value="1" data-points="{{ user.total_points }}" style="width: 20px; height: 20px; cursor: pointer;">
                            <label for="use_points" style="font-weight: bold; cursor: pointer;">
                                Utiliser mes <strong>{{ user.total_points }}</strong> points 
                                <span class="text-muted">(Réduction de {{ user.total_points|number_format(2) }} $)</span>
                            </label>
                        </div>
                    {% else %}
                        <p class="text-muted">Vous n'avez pas encore de points à utiliser.</p>
                    {% endif %}
                </div>

                <button type="submit" class="btn btn-primary btn-large btn-full" id="payButton">
                    Payer <span id="displayTotal">{{ cart_total|number_format(2, '.', ' ') }}</span> $
                </button>
            </form>
        </div>

        <div class="order-summary">
            <h2>Récapitulatif</h2>
            
            <div class="summary-items">
                {% for item in cart_items %}
                    <div class="summary-item">
                        <span class="item-name">{{ item.name }} x {{ item.quantity }}</span>
                        <span class="item-price">{{ (item.price * item.quantity)|number_format(2, '.', ' ') }} $</span>
                    </div>
                {% endfor %}
            </div>

            <div class="summary-totals">
                <div class="summary-row total-row">
                    <span>Total:</span>
                    <span class="total-amount">{{ cart_total|number_format(2, '.', ' ') }} $</span>
                </div>
                <div class="summary-row points-row highlight">
                    <span>Points à gagner:</span>
                    <span class="points-earned">{{ loyalty_points }} points</span>
                </div>
            </div>

            <div class="current-balance">
                <p>Votre solde actuel: <strong>{{ user.total_points }} points</strong></p>
                <p>Après cet achat: <strong>{{ user.total_points + loyalty_points }} points</strong></p>
            </div>

            <a href="/Loyalty_Points_System/public/shop/cart" class="btn btn-secondary btn-full">Modifier le panier</a>
        </div>
    </div>
{% endblock %}

{% block footer_extra %}
<script>
     const checkbox = document.getElementById('use_points');
    const displayTotal = document.getElementById('displayTotal');
    const originalTotal = parseFloat("{{ cart_total }}");

    if(checkbox) {
        checkbox.addEventListener('change', function() {
            let points = parseFloat(this.getAttribute('data-points'));
            if (this.checked) {
                let newTotal = Math.max(0, originalTotal - points);
                displayTotal.innerText = newTotal.toFixed(2);
            } else {
                displayTotal.innerText = originalTotal.toFixed(2);
            }
        });
    }
</script>
{% endblock %}