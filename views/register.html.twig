{% extends 'layouts/base.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
<div class="auth-wrapper">
    <div class="auth-card">
        <h1 class="auth-title">Inscription</h1>
        <p class="auth-subtitle">Créez votre compte ShopEasy</p>

        {% if error_global %}
            <div class="auth-alert auth-alert-error">
                {{ error_global }}
            </div>
        {% endif %}

        <form method="POST" action="/Loyalty_Points_System/public/register" class="auth-form">
            <div class="form-group">
                <label>Nom</label>
                <input type="text" name="name" required>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required>
            </div>

            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" name="password" required>
            </div>

            <div class="auth-actions">
                <button class="btn btn-primary btn-full">Créer un compte</button>
            </div>
        </form>

        <div class="auth-footer">
            Déjà un compte ?
            <a href="/Loyalty_Points_System/public/login">Se connecter</a>
        </div>
    </div>
</div>
{% endblock %}
