{% extends 'layout.html.twig' %}

{% block content %}
<div class="dashboard">
    <h1>مرحباً بك، {{ user.name }}!</h1>
    
    <div class="points-card" style="background: #f4f4f4; padding: 20px; border-radius: 10px;">
        <h3>رصيد نقاطك الحالي:</h3>
        <p style="font-size: 2em; color: green; font-weight: bold;">
            {{ user.total_points }} نقطة
        </p>
    </div>

    <div class="actions" style="margin-top: 20px;">
        <a href="/Loyalty_Points_System/public/logout" class="btn-logout">تسجيل الخروج</a>
    </div>
</div>
{% endblock %}